# ─── OneStudios Backend Environment Variables ────────────
# Copy this file to .env and fill in your values

# Database (Neon PostgreSQL)
DATABASE_URL="postgresql://user:password@host/dbname?sslmode=require"

# JWT Secrets (use strong random strings in production)
JWT_SECRET="change-me-to-a-random-string"
ACCESS_TOKEN_SECRET="change-me-to-a-random-string"
REFRESH_TOKEN_SECRET="change-me-to-a-random-string"

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:5000/auth/google/callback

# Discord OAuth
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret
DISCORD_CALLBACK_URL=http://localhost:5000/auth/discord/callback

# Google Gemini AI (free key at https://aistudio.google.com/apikey)
GEMINI_API_KEY=your-gemini-api-key

# Server
PORT=5000
